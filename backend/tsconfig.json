{
  "compilerOptions": {
    "module": "ESNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "moduleResolution": "Bundler", // This is fine
    "outDir": "./dist"
  },
  "include": ["**/*.ts", ".eslintrc.json"],
  "exclude": ["./node_modules", "./dist", "vitest.config.ts"]
}